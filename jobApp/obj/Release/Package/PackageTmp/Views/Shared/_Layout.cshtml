<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/FacebookSDK.js"></script>
    <link href="~/Content/navbar/css/style.min.css" rel="stylesheet" />

</head>
<body>
    <style>
        .bg {
            background: url('../../Content/Images/bg_8.jpg') no-repeat center center;
            /*same height as jumbotron */
            top: 0;
            left: 0;
            z-index: -1;
        }
        .nav navbar-nav{
            color:white !important;
            text-shadow:2px 2px black;
        }
    </style>

    <div class="navbar navbar-default navbar-fixed-top" style="background-color:transparent; border-color: transparent;opacity:0.5;">
        <div class="container" style="background-color:dodgerblue;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav" style="font-size:large;text-shadow:2px 2px black;">
                    <li class="btn-primary1">@Html.ActionLink(Resources.menuHome, "Index", "Home")</li>
                    <li class="btn-primary1">@Html.ActionLink(Resources.menuJobs, "Index", "Jobs")</li>
                    <li class="btn-primary1">@Html.ActionLink(Resources.menuContact, "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="btn-primary1">@Html.ActionLink(Resources.myJobsmenu, "Index", "MyJobs")</li>
                    } 
                </ul>

                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>

    <div class="container body-content">
        <br><br><br>
        <div class="fb-like"
             data-share="true"
             data-width="450"
             data-show-faces="true">
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Application</p>
            <p><a href="https://mk.linkedin.com/in/marjan-donev-aa004510b" target="_blank">by Marjan Donev</a></p>
        </footer>
    </div>


    <script src="~/Content/navbar/js/src/menu.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
